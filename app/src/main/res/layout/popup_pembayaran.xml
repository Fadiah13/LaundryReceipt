<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popuppembayaran"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialoglayanan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detailLayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Metode Pembayaran"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:layout_marginStart="90dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/silang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_close" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/tunai"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_metode"
            android:fontFamily="@font/poppins_semibold"
            android:text="Tunai"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tunai"
            app:layout_constraintEnd_toEndOf="@+id/tunai"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintStart_toStartOf="@+id/tunai"
            app:layout_constraintTop_toTopOf="@+id/tunai"
            app:layout_constraintVertical_bias="0.379"
            app:srcCompat="@drawable/panah" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/transfer"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_metode"
            android:fontFamily="@font/poppins_semibold"
            android:text="Transfer"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/transfer"
            app:layout_constraintEnd_toEndOf="@+id/transfer"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintStart_toStartOf="@+id/transfer"
            app:layout_constraintTop_toTopOf="@+id/transfer"
            app:layout_constraintVertical_bias="0.379"
            app:srcCompat="@drawable/panah" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>