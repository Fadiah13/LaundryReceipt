<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pembayaran">

    <Button
        android:id="@+id/saatini"
        android:layout_width="349dp"
        android:layout_height="80dp"
        android:background="@drawable/button_pembayaran"
        android:fontFamily="@font/poppins_semibold"
        android:text="lunasi saat ini"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />

    <Button
        android:id="@+id/dp_payment"
        android:layout_width="349dp"
        android:layout_height="80dp"
        android:background="@drawable/button_pembayaran"
        android:fontFamily="@font/poppins_semibold"
        android:text="Dp dan payment"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saatini"
        app:layout_constraintVertical_bias="0.127" />

    <Button
        android:id="@+id/saatpengambilan"
        android:layout_width="349dp"
        android:layout_height="80dp"
        android:background="@drawable/button_pembayaran"
        android:fontFamily="@font/poppins_semibold"
        android:text="bayar saat pengambilan"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dp_payment"
        app:layout_constraintVertical_bias="0.157" />


    <TextView
        android:id="@+id/totalBayar"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Tagihan"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/totaltagihan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saatpengambilan"
        app:layout_constraintVertical_bias="0.838" />

    <TextView
        android:id="@+id/totaltagihan"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/poppins"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saatpengambilan"
        app:layout_constraintVertical_bias="0.464" />

    <View
        android:id="@+id/view2"
        android:layout_width="210dp"
        android:layout_height="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="560dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231" />

</androidx.constraintlayout.widget.ConstraintLayout>